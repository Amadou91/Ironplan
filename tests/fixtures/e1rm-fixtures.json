{
  "description": "Golden fixtures for E1RM (Estimated 1-Rep Max) calculations",
  "formula": "Epley: weight * (1 + repsAtFailure / 30) where repsAtFailure = reps + RIR",
  "version": "epley_v1",
  "fixtures": [
    {
      "id": "e1rm-001",
      "description": "Standard 5 reps @ RPE 10 (RIR 0)",
      "input": { "weight": 100, "weightUnit": "kg", "reps": 5, "rpe": 10 },
      "expected": { "e1rm": 116.67, "tolerance": 0.01 },
      "calculation": "100 * (1 + 5/30) = 100 * 1.1667 = 116.67"
    },
    {
      "id": "e1rm-002",
      "description": "Standard 10 reps @ RPE 8 (RIR 2)",
      "input": { "weight": 60, "weightUnit": "kg", "reps": 10, "rpe": 8 },
      "expected": { "e1rm": 84.0, "tolerance": 0.01 },
      "calculation": "60 * (1 + (10+2)/30) = 60 * 1.4 = 84.0"
    },
    {
      "id": "e1rm-003",
      "description": "Heavy singles @ RPE 9 (RIR 1)",
      "input": { "weight": 200, "weightUnit": "kg", "reps": 1, "rpe": 9 },
      "expected": { "e1rm": 213.33, "tolerance": 0.01 },
      "calculation": "200 * (1 + (1+1)/30) = 200 * 1.0667 = 213.33"
    },
    {
      "id": "e1rm-004",
      "description": "12 reps at RPE 10 - max reps boundary",
      "input": { "weight": 50, "weightUnit": "kg", "reps": 12, "rpe": 10 },
      "expected": { "e1rm": 70.0, "tolerance": 0.01 },
      "calculation": "50 * (1 + 12/30) = 50 * 1.4 = 70.0"
    },
    {
      "id": "e1rm-005",
      "description": "Using RIR directly instead of RPE",
      "input": { "weight": 80, "weightUnit": "kg", "reps": 8, "rir": 3 },
      "expected": { "e1rm": 109.33, "tolerance": 0.01 },
      "calculation": "80 * (1 + (8+3)/30) = 80 * 1.3667 = 109.33"
    },
    {
      "id": "e1rm-006",
      "description": "LBS input converted internally",
      "input": { "weight": 225, "weightUnit": "lb", "reps": 5, "rpe": 10 },
      "expected": { "e1rm": 119.07, "tolerance": 0.1 },
      "calculation": "(225/2.20462) * (1 + 5/30) = 102.06 * 1.1667 = 119.07 kg"
    },
    {
      "id": "e1rm-007",
      "description": "RIR at max allowed (3) - edge case",
      "input": { "weight": 100, "weightUnit": "kg", "reps": 5, "rir": 3 },
      "expected": { "e1rm": 126.67, "tolerance": 0.01 },
      "calculation": "100 * (1 + (5+3)/30) = 100 * 1.2667 = 126.67"
    },
    {
      "id": "e1rm-008",
      "description": "Per-implement load type with 2 implements",
      "input": { "weight": 40, "weightUnit": "kg", "reps": 8, "rpe": 9, "loadType": "per_implement", "implementCount": 2 },
      "expected": { "e1rm": 104.0, "tolerance": 0.01 },
      "calculation": "(40*2) * (1 + (8+1)/30) = 80 * 1.3 = 104.0"
    }
  ],
  "ineligibleCases": [
    {
      "id": "e1rm-inelig-001",
      "description": "Reps > 12 - not eligible",
      "input": { "weight": 50, "weightUnit": "kg", "reps": 15, "rpe": 8 },
      "expected": null,
      "reason": "Epley formula inaccurate above 12 reps"
    },
    {
      "id": "e1rm-inelig-002",
      "description": "RPE < 7 - not eligible",
      "input": { "weight": 50, "weightUnit": "kg", "reps": 10, "rpe": 6 },
      "expected": null,
      "reason": "Low effort sets not reliable for E1RM"
    },
    {
      "id": "e1rm-inelig-003",
      "description": "RIR > 3 - not eligible",
      "input": { "weight": 50, "weightUnit": "kg", "reps": 10, "rir": 4 },
      "expected": null,
      "reason": "High RIR sets not reliable for E1RM"
    },
    {
      "id": "e1rm-inelig-004",
      "description": "No effort indicator - not eligible",
      "input": { "weight": 50, "weightUnit": "kg", "reps": 10 },
      "expected": null,
      "reason": "RPE or RIR required for E1RM calculation"
    }
  ]
}
